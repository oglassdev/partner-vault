{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "shell:allow-open",
    "os:allow-platform",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://*.supabase.co/*" },
        { "url": "http://*.supabase.co/*" }
      ]
    }
  ]
}
